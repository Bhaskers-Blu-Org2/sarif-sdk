                },
                "RuleMetadataDoeNotIncludeMessageId": {
                  "text": "{0}: The result message specifies the id value '{1}', but the metadata for rule '{2}' does not contain a message string with that id."
                }
              },
              "helpUri": "http://docs.oasis-open.org/sarif/sarif/v2.1.0/sarif-v2.1.0.html"
            }
